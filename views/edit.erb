<!-- this should be like new form -->

<form method="POST" action="/pizzas/<%= @pizza.id %>">

  <label for="first_name_field">First name:</label>
  <input id="first_name_field" name="first_name" type="text" value="<%= @pizza.first_name %>">

  <label for="last_name_field">Last name:</label>
  <input id="last_name_field" name="last_name" type="text" value="<%= @pizza.last_name %>">

  <p>Your original choice was: <%= @pizza.topping %>.</p>

  <label for="pizza-select">Select your pizza:</label>
  <select id="pizza-select" name="topping">

    <option value="Margherita" 
    <%= "selected" if @pizza.topping == "Margherita" %>
    >Margherita</option>

    <option value="Pepperoni"
    <%= "selected" if @pizza.topping == "Pepperoni" %>
    >Pepperoni</option>
    
    <option value="Italian Sausage"
    <%= "selected" if @pizza.topping == "Italian Sausage" %>
    >Italian Sausage</option>

  </select>

  <p>You originally selected <%= @pizza.quantity %> pizzas.</p>

  <label for="quantity">How many do you want now?</label>
  <input type="number" id="quantity" name="quantity" value=<%= @pizza.quantity %>>

  <input type="submit" value="Change order">

</form>