<form method="POST" action="/pizzas">

  <label for="first_name_field">First name:</label>
  <input id="first_name_field" name="first_name" type="text">

  <label for="last_name_field">Last name:</label>
  <input id="last_name_field" name="last_name" type="text">

  <label for="pizza-select">Select your pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="Margherita">Margherita</option>
    <option value="Pepperoni">Pepperoni</option>
    <option value="Quattro Formaggio">Quattro Formaggio</option>
  </select>

  <label for="quantity">How many do you want?</label>
  <input type="number" id="quantity" name="quantity">

  <input type="submit" value="Order pizza">

</form>